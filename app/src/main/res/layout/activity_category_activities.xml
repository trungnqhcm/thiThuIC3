<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CategoryActivities">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="8dp">
            <Button
                    android:text="Đăng xuất"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn_dang_xuat" android:layout_weight="1"
                    android:textSize="10sp" android:gravity="left|center"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            <TextView
                    android:text="Xin chào,"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView5"
                    android:gravity="right|center" android:layout_weight="1" android:paddingBottom="8dp"
                    android:paddingTop="8dp"/>
            <TextView
                    android:text="Loading..."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/txt_ten_thi_sinh" android:padding="8dp"
                    android:gravity="left|center" android:textStyle="bold"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:cardElevation="4dp" android:id="@+id/card_test1">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:padding="72dp" android:gravity="center">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                            android:text="Căn bản Máy tính"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txt_test1" android:textSize="24sp"
                            android:gravity="center_vertical|center_horizontal|center" android:textStyle="bold"
                            android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                            android:layout_margin="2dp"/>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:cardElevation="4dp" android:id="@+id/card_test2"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:padding="72dp">

                <TextView
                        android:text="Phần mềm thiết yếu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txt_test2" android:textSize="24sp"
                        android:gravity="center_vertical|center_horizontal|center" android:textStyle="bold"
                        android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:cardElevation="4dp" android:id="@+id/card_test3">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:padding="72dp">

                <TextView
                        android:text="Cuộc sống Trực tuyến"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txt_test3" android:textSize="24sp"
                        android:gravity="center_vertical|center_horizontal|center" android:textStyle="bold"
                        android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>